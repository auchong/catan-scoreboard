<% include partials/header %>

<div class="container">
    <div class="row">
        <h1 class="text-center">New Player</h1>

        <form action="/player" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="player[name]" placeholder="Name">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="player[image]" placeholder="Player Image">
            </div>
            <div class="form-group">
                <select class="form-control" name="player[color]">
                    <option value="" disabled selected>Select Player Color</option>
                    <option value="red">Red</option>
                    <option value="blue">Blue</option>
                    <option value="white">White</option>
                    <option value="orange">Orange</option>
                </select>
            </div>
            <div class="form-group">
                <input class="btn btn-primary btn-block" type="submit" value="Submit">
            </div>
        </form>

        <a href="/">Go back</a>
    </div>
</div>

<% include partials/footer %>
